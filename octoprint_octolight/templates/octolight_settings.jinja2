<form class="form-horizontal">
	<h3>OctoLight settings</h3>
	<div class="control-group">
		<label class="control-label">{{ _('Light PIN') }}</label>
		<div class="controls">
			<input type="number" min="1" max="40" class="input-small" data-bind="value: settings.plugins.octolight.light_pin">
		</div>
		<div class="controls">
   			<label class="checkbox">
			<input type="checkbox" data-bind="checked: settings.plugins.octolight.inverted_light_output">
   				{{ _('Inverted output') }}
   			</label>
   		</div>
   		<hr>
		<label class="control-label">{{ _('Fan PIN') }}</label>
		<div class="controls">
			<input type="number" min="1" max="40" class="input-small" data-bind="value: settings.plugins.octolight.fan_pin">
		</div>
		<div class="controls">
			<label class="checkbox">
				<input type="checkbox" data-bind="checked: settings.plugins.octolight.inverted_fan__output">
				{{ _('Inverted output') }}
			</label>
		</div>

	</div>
</form>
